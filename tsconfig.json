{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "sourceMap": true,
    "target": "es2021",
    "checkJs": false
  },
  "include": [
    "src/**/*",
    "stories/**/*.tsx",
    ".storybook/**/*.css",
    "images/**/*.svg"
  ],
  "exclude": [
    "node_modules"
  ]
}